#!/bin/sh
readonly CONFIG=test_sse

retest() {
    printf "\033c"
    echo "----------------------------------------"
    date +%Y-%m-%d-%H:%M:%S
    echo "----------------------------------------"
    make -j3 config=$CONFIG test && bin/test/test;
}

make config=$CONFIG clean
retest

export -f retest
fswatch -o src test | xargs -n1 -I{} bash -c 'retest' _ {}
