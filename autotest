#!/bin/sh
retest() {
    printf "\033c"
    echo "----------------------------------------"
    date +%Y-%m-%d-%H:%M:%S
    echo "----------------------------------------"
    make config=test test && bin/test/test;
}

make clean
retest

export -f retest
fswatch -o src test | xargs -n1 -I{} bash -c 'retest' _ {}
